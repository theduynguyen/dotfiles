" editor settings
syntax enable
set nu
set cursorline
set hlsearch
set incsearch
set backspace=indent,eol,start
set number relativenumber
set noshowmode
set cmdheight=2
set formatoptions-=cro
filetype plugin indent on

" dont create swapfile
set noswapfile

" do not need to save when switching buffers
set hidden

" use same clipboard as others
set clipboard=unnamed

